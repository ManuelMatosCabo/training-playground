pipeline {
  agent none
  stages {
    stage ('java') {
      agent {
        dockerfile {
          dir '003 - Defining Execution Enviroments'
          filename '04 - Dockerfile - Java'
        }
      }
      steps {
      	sh "mvn --version"
      }
    }
     stage {
      agent ('node') {
        dockerfile {
          dir '003 - Defining Execution Enviroments'
          filename '04 - Dockerfile - NPM'
        }
      }
      steps {
      	sh "node -v"
      }
    }
  }
}
