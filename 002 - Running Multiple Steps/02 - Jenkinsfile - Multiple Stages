pipeline {
    agent { 
		docker { 
			image 'alpine:latest' 
		}
	}
    stages {
    stages('build') {
    	steps {   
    	saveAndPrintDate("test") 
	}
    }
    stage('test') {
    step{
    sh "grep '2023' test"
    }
    }
}        
}
    def saveAndPrintDate(filename = '') {
     sh "date > $filename && cat $filename"
}
